<%= render  "friends/lookup" %>
<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to  "View Profile", user_path(friend), class: 'btn btn-primary btn-xs friend-action-button' %>
            <%= link_to  "Remove Friend", friendship_path(friend), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-xs btn-danger friend-action-button' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">You don't have any friends yet. Please add some!</p>
  </div>
<% end %>